var jsonArray = JSON.stringify(request.body.data);
var jsonParsedArray = JSON.parse(jsonArray);
var correlationIdJira = jsonParsedArray.id;
var TicketNumber = jsonParsedArray.fields.customfield_10060;
var verificationINC = "INC";
var verificationRitm = "RITM";
	
gs.log('Teste de Integração 2022: ' + 'Chamado: ' + TicketNumber + ' ID correlacionado: ' + correlationIdJira + ' ');
	
if(TicketNumber.includes(verificationINC)){
var inc = new GlideRecord('incident');
inc.addQuery('number', TicketNumber);
inc.query();
if(inc.next()){
inc.close_code = 'Solved (Permanently)';
inc.close_notes= 'Chamado encerrado por Jira Integrator.';
inc.setValue('state', 6);
inc.update();
}
	}


})(request, response);]]></operation_script>
